<h1>Burgers!</h1>

<h2>Burgers that are yet to be eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless is_eaten}}
      {{> cats/cat-block is_eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if is_eaten}}
      {{> cats/cat-block is_eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
